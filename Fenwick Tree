#include <bits/stdc++.h>
#define ll long long

using namespace std;

int fen[1000001];

int find(int);

int main()
{
    int n, m, k, arr[1000001];
    scanf("%d%d%d", &n, &m, &k);
    for (int i = 1; i <= n; i++)
        scanf("%d", arr + i);

    for (int i = 1; i <= n; i++) {
        int idx = i;
        while (idx <= n) {
            fen[idx] += arr[i];
            idx += idx & -idx;
        }
    }

    for (int i = 0; i < m + k; i++) {
        int a, b, c;
        scanf("%d%d%d", &a, &b, &c);  // a : 1 - update, a : 2 - sum
        if (a - 2) {
            int idx = b;
            while (idx <= n) {
                fen[idx] += c - arr[b];
                idx += idx & -idx;
            }
            arr[b] = c;
        }
        else {
            printf("%d\n", find(c) - find(b - 1));
        }
    }

    return 0;
}

int find(int idx) // sum from 1 to idx
{
    if (idx)
        return find(idx - (idx & -idx)) + fen[idx];
    else
        return 0;
}
