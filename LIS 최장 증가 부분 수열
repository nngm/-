#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n, k;
    vector<int> dp;
    scanf("%d %d", &n, &k);

    dp.push_back(k);

    for (int i = 1; i < n; i++) {
        scanf("%d", &k);

        auto itr = lower_bound(dp.begin(), dp.end(), k);

        if (itr == dp.end())
            dp.push_back(k);
        else
            *itr = k;
    }

    printf("%d", dp.size());

    return 0;
}
